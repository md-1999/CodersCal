<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/usernames"
        android:text="USERNAMES"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="112dp"/>

    <EditText
        android:id="@+id/settingsccuser"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/codechef"
        android:drawablePadding="7dp"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/settingscfuser"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/codeforces"
        android:drawablePadding="7dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/settingstopuser"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/topcoder"
        android:drawablePadding="7dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/settingsheuser"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/hackerearth"
        android:drawablePadding="7dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/settingshruser"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/hackerrank"
        android:drawablePadding="7dp"
        android:inputType="text"/>


    <Button
        android:id="@+id/settings_but_save"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:text="Save"
        android:textStyle="bold"/>


</LinearLayout>